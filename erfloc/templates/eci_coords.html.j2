<html>
    <head>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <form class="flex justify-center m-10"  method="post" action="/site/get-coords">
            <div class="flex flex-col space-y-4 rounded-lg shadow-lg bg-sky-200 p-4">
                <div>
                    <label for="location">City or Address:</label>
                    <input class="shadow rounded w-full" type="text" id="location" readonly value="{{ location }}">
                </div>
                <div>
                    <label for="timestamp">Observation time:</label>
                    <input class="shadow rounded w-full" type="datetime-local" id="timestamp" readonly value="{{ obstime }}">
                </div>
                <div class="flex justify-evenly p-2 space-x-4">
                    <div class="flex justify-left space-x-2">
                        <label for="location">X:</label>
                        <input type="text" value="{{ coords.x }}" class="shadow rounded w-full" readonly>
                    </div>
                    <div class="flex justify-left space-x-2">
                        <label for="location">Y:</label>
                        <input type="text" value="{{ coords.y }}" class="shadow rounded w-full" readonly>
                    </div>
                    <div class="flex justify-left space-x-2">
                        <label for="location">Z:</label>
                        <input type="text" value="{{ coords.z }}" class="shadow rounded w-full" readonly>
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>